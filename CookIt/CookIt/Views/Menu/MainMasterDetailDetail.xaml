<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookIt.Views.Menu.MainMasterDetailDetail"
             Title="Detail">
    <StackLayout HorizontalOptions="FillAndExpand"
                 Margin="20">

        <Image Source="cool_shiba.jpg" 
               HorizontalOptions="FillAndExpand"
               Scale="0.5"/>

        <Button x:Name="RecipeSearchButton"
                Clicked="RecipeSearchButton_ClickedAsync"/>

        <Button x:Name="ViewAllRecipesButton"
                Clicked="ViewAllRecipes_Clicked"/>
    </StackLayout>
</ContentPage>